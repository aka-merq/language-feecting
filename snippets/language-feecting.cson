'.source.feecting':
  'External Variable':
    'prefix': '$'
    'body': '$$1 = $2'

  'LOCAL Variable':
    'prefix': '@'
    'body': '@$1 = $2'

  'HASH Variable':
    'prefix': '#'
    'body': '#$1 = $2'

  'BEGIN':
    'prefix': 'begin'
    'body': '''::BEGIN:$1
    $2
    ::END:$1'''

  'Base Template':
