'.source.feecting':
  'External Variable':
    'prefix': '$'
    'body': '$$1 = $2'

  'LOCAL Variable':
    'prefix': '@'
    'body': '@$1 = $2'

  'HASH Variable':
    'prefix': '#'
    'body': '#$1 = $2'

  'Base Template':
    'prefix': 'feecting'
    'body': '''# $1

    ## DISCLAIMER
    > $2

    // VARIABLES
    $FEECTING = https://github.com/indraai/language-feecting/
    @Deva = http://DevaBuddhism.com

    @$3 = $4

    -- BEGIN:OUTLINE
      1. Who? $5
      2. What? $6
      3. When? $7
      4. Where? $8
      5. Why? $9
    -- END:OUTLINE

    -- BEGIN:PROGRAM

      $10

    -- END:PROGRAM

    -- BEGIN:META
      Title: $1
      Version: 0.0.1
      Author: @$3
      Date: $7
      Copyright: Copyright (c)$12 @$3. All Rights Reserved
